<%= render 'header' %>

<div class="container">
  <h1 class="text-center">Visits</h1>

  <div class="row">
    <div class="col-12">
      <%= link_to 'Add New Visit +', new_visit_path, class:'btn btn-primary mb-5' %>
    </div>
  </div>

  <div class="row flex-wrap">
    <% @visits.each do |visit| %>
      <div class="card" style="width: 18rem; margin-right: 15px; margin-bottom: 15px;">
        <div class="card-body">
          <h5 class="card-title"><%= visit.name %></h5>
          <p class="card-text"><%= visit.address %></p>
          <%= link_to 'View Visit', visit_path(visit), class:'btn btn-primary' %>
        </div>
      </div>
    <% end %>
  </div>

</div>
